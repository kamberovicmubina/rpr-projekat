    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
  </rowConstraints>
   <children>
      <Label text="%titleOfContract" />
      <Label text="%dateFrom" GridPane.rowIndex="1" />
      <Label text="%dateTo" GridPane.rowIndex="2" />
      <TextField fx:id="titleField" styleClass="defaultClass" GridPane.columnIndex="1" />
      <DatePicker fx:id="fromPicker" styleClass="defaultClass" GridPane.columnIndex="1" GridPane.rowIndex="1" />
      <DatePicker fx:id="toPicker" styleClass="defaultClass" GridPane.columnIndex="1" GridPane.rowIndex="2" />
