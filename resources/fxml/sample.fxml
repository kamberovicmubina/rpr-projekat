<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ContextMenu?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="borderPane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1">
   <top>
      <Label fx:id="titleLabel" alignment="CENTER" prefHeight="38.0" prefWidth="533.0" text="%building" BorderPane.alignment="CENTER">
         <graphic>
            <Label text="%crm" />
         </graphic></Label>
   </top>
   <center>
      <VBox prefHeight="273.0" prefWidth="400.0" BorderPane.alignment="CENTER">
         <children>
            <Label alignment="CENTER" text="%clients" />
            <ListView fx:id="clientList" prefHeight="200.0" prefWidth="200.0">
               <contextMenu>
                  <ContextMenu>
                    <items>
                        <MenuItem fx:id="addClient" mnemonicParsing="true" onAction="#onAdd" text="_Add new client" />
                        <MenuItem fx:id="deleteClient" mnemonicParsing="true" onAction="#onDelete" text="_Delete client" />
                      <MenuItem fx:id="changeClient" mnemonicParsing="true" onAction="#onChange" text="_Change client" />
                    </items>
                  </ContextMenu>
               </contextMenu></ListView>
            <Button fx:id="addClientButton" mnemonicParsing="false" onAction="#onAdd" text="%addClient" />
         </children>
      </VBox>
   </center>
   <left>
      <VBox prefHeight="298.0" prefWidth="132.0" BorderPane.alignment="CENTER">
         <children>
            <Label alignment="CENTER" contentDisplay="CENTER" text="%ourServices" textAlignment="CENTER" />
            <ListView fx:id="servicesList" prefHeight="220.0" prefWidth="137.0" />
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Button fx:id="addServiceBtn" mnemonicParsing="false" onAction="#onAddService" text="%add" />
                  <Button fx:id="deleteServiceBtn" mnemonicParsing="false" onAction="#onDeleteService" text="%delete" />
               </children>
            </HBox>
         </children>
      </VBox>
   </left>
   <right>
      <VBox prefHeight="298.0" prefWidth="156.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="profitButton" mnemonicParsing="false" onAction="#printProfit" text="%profitPerClient">
               <tooltip>
                  <Tooltip text="%profitPerClient" />
               </tooltip></Button>
            <Button fx:id="clientNumberBtn" mnemonicParsing="false" onAction="#onClientNumber" text="%clientNumberStatistic">
               <tooltip>
                  <Tooltip text="%clientNumberStatistic" />
               </tooltip></Button>
            <Button mnemonicParsing="false" prefWidth="100.0" text="%departmentStatistic">
               <tooltip>
                  <Tooltip text="%departmentStatistic" />
               </tooltip></Button>
         </children>
      </VBox>
   </right>
   <bottom>
      <HBox prefHeight="33.0" prefWidth="600.0" BorderPane.alignment="CENTER">
         <children>
            <Label fx:id="companyName" text="%buildingSmall" />
            <Label fx:id="companyAddress" text="%titova" />
            <Label fx:id="companyOwner" text="%owner" />
            <MenuButton mnemonicParsing="false" text="%izborJezika" textAlignment="CENTER">
              <items>
                <MenuItem fx:id="bosnianOption" mnemonicParsing="false" onAction="#onBosnian" text="%bosnian" />
                <MenuItem fx:id="englishOption" mnemonicParsing="false" onAction="#onEnglish" text="%english" />
              </items>
            </MenuButton>
         </children>
      </HBox>
   </bottom>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</BorderPane>
